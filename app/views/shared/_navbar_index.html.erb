
<div class="navbar navbar-expand-lg navbar-dark fixed-top navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "#top", class: "navbar-brand" do %>
      <%= image_tag('TTPlogo.png') %>
    <% end %>

    <div class="search-bar">
      <%= form_with url: posts_path, method: :get, class: "input-group" do %>
        <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Encontre um tatuador" %>
        <button class="form-submit"><i class="fa-solid fa-magnifying-glass"></i></button>
      <% end %>
    </div>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Home", root_path, class:"nav-link active", aria_current: "page" %>
          </li>
           <li class="nav-item">
            <%= link_to "Explorar",posts_path, class:"nav-link active" %>
          </li>
          <li>
            <%= link_to "Criar post", new_post_path, class:"nav-link active" if current_user.role == "artist" %>
          </li>
          <li class="nav-item">
            <%= link_to "Perfil", user_profile_path(current_user), class:"nav-link active" %>
          </li>
          <li>
            <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class:"nav-link active" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Explorar", posts_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sobre", root_path(anchor: 'desenvolvedores'), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<script>
  window.addEventListener('scroll', () => {
    if (window.scrollY >= 56) {
      document.querySelector('.navbar').classList.add('navbar-scrolled')
    } else if (window.scrollY < 56) {
      document.querySelector('.navbar').classList.remove('navbar-scrolled')
    }
  })
</script>
