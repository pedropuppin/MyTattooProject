<div class="image-content">
  <div class="card-image">
    <%= render partial: "shared/user_photo", locals: { photo: quotation.artist.photo } %>
  </div>
  <div class="card-icon">
    <%= link_to quotation_path(quotation), class: "delete", data: { turbo_method: :delete, turbo_confirm: "Tem certeza que quer deletar o registro dessa sessão?" } do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>
    <%= link_to messages_index_path, class: "chat-link" do %>
      <i class="fa-solid fa-comment"></i>
    <% end %>
    <%= link_to user_profile_path(quotation.artist), class: "chat-link" do %>
      <i class="fa-solid fa-user"></i>
    <% end %>
  </div>
</div>
<div class="card-product-infos">
  <h2>Seu tatuador: <%= quotation.artist.first_name %></h2>
  <p><strong>Descrição:</strong> <%= quotation.description %></p>
</div>
<div class="card-time">
  <p>Data: <%= quotation.date.strftime('%d/%m/%y') %></p>
</div>
